{
  "name": "@jiin.seok/formkit-react",
  "version": "0.1.2",
  "description": "A powerful React form library with Compound Component Pattern, built-in validation, and TypeScript support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "form",
    "forms",
    "validation",
    "react-hook-form",
    "zod",
    "compound-components",
    "typescript",
    "accessibility",
    "a11y"
  ],
  "author": "Jiin Seok",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JiinSeok/formkit-react"
  },
  "bugs": {
    "url": "https://github.com/JiinSeok/formkit-react/issues"
  },
  "homepage": "https://github.com/JiinSeok/formkit-react#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-select": "^2.0.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.300.0",
    "react-hook-form": "^7.48.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "terser": "^5.43.1",
    "typescript": "^5.3.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.0.0",
    "zod": "^3.22.0"
  },
  "optionalDependencies": {
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}